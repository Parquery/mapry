[BASIC]
good-names=i,go,py

[TYPECHECK]
ignored-modules = numpy
ignored-classes = numpy,PurePath
generated-members=bottle\.request\.forms\.decode,bottle\.request\.query\.decode

[FORMAT]
max-line-length=80

[MESSAGES CONTROL]
disable=too-few-public-methods,abstract-class-little-used,len-as-condition,bad-continuation,bad-whitespace,no-else-return,duplicate-code,too-many-locals,too-many-branches,too-many-arguments,anomalous-backslash-in-string,too-many-lines,too-many-statements,no-else-raise
